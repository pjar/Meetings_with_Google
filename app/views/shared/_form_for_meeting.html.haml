= form_for @meeting do |f|
  -if @meeting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meeting.errors.count, "error")} prohibited this meeting from being saved:"
      %ul
        - @meeting.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :meeting_date, "Day"
    = f.text_field :meeting_date
  .field
    = f.label :start_time
    = f.text_field :start_time
  .field
    = f.label :end_time
    = f.text_field :end_time
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :place
    = f.select  :place, options_for_select(Meeting.places_sorted_by_times_used, :place), {:include_blank => true}
  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :total_places
    = f.text_field :total_places
  .actions
    = f.submit 'Save'
    #{ link_to 'Back', meetings_path }

