%table
  %tr
    %th Name
    %th Email
    %th
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.email
      - if admin?
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        - if !current_user(user.id)
          %td= button_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete,
                                          :title => "Will delete user #{user.name}"